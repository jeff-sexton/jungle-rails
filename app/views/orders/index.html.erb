<section class="user-orders-index">

  <header class="page-header">
    <h1>Orders for <%= current_user.email %></h1>
  </header>

  <div class="panel panel-default orders">

  <% if @orders.any? %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Order Number</th>
          <th>Created On</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>

    <% else %>
      <div class="alert alert-primary text-center" role="alert">
        It looks like you don't have any orders friend.
        <br>
        <a class="alert-link" href="/">Click here to get back to shopping.</a>
      </div>
    <% end %>

  </div>

</section>