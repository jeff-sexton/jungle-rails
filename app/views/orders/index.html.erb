<section class="user-orders-index">

  <header class="page-header">
    <h1>Orders for <%= current_user.email %></h1>
  </header>

  <div class="panel panel-default orders">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Order Number</th>
          <th>Created On</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>

  </div>

</section>